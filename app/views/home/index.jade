extends ../shared/template

block content

  .form
    form#artistform(method='POST', action='/artists', enctype='multipart/form-data')
      h2 Add Artist
      input(type='text', name='name' placeholder='Artist Name')
      span Upload Band Photo
      input(type='file', name='artistphoto')
      button Add Artist

  .form
    form#albumform(method='POST', action='/albums', enctype='multipart/form-data')
      h2 Add Album
      input(type='text', name='title' placeholder='Album Name')
      select(name='artistId')
        option Choose Artist
        each artist in artists
          option(value=artist._id)= artist.name
      span Upload Cover Art
      input(type='file', name='albumphoto')
      button Add Album

  .form
    form#songform(method='POST', action='/songs', enctype='multipart/form-data')
      h2 Add Song
      input(type='text', name='title' placeholder='Song Title')
      select(name='albumId')
        option Choose Album
        each album in albums
          option(value=album._id)= album.title
      span Upload Song File
      input(type='file', name='songmp3')
      button Add Song
